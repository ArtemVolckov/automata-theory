CC = gcc

CC_FLAGS = -g

REGEX_SRC = regex.c
REGEX_EXE = $(REGEX_SRC:.c=)

GENERATOR_SRC = generator.c
GENERATOR_EXE = $(GENERATOR_SRC:.c=)

HASHMAP_SRC = hashmap.c

OUTPUT_PARSER_SRC = output_parser.c
OUTPUT_PARSER_EXE = $(OUTPUT_PARSER_SRC:.c=)

all: $(REGEX_EXE) $(GENERATOR_EXE) $(OUTPUT_PARSER_EXE)

clean:
	rm -f $(REGEX_EXE) $(GENERATOR_EXE) $(OUTPUT_PARSER_EXE)

$(REGEX_EXE): $(REGEX_SRC)
	$(CC) $< -o $@

$(GENERATOR_EXE): $(GENERATOR_SRC)
	$(CC) $< -o $@

$(OUTPUT_PARSER_EXE): $(OUTPUT_PARSER_SRC)
	$(CC) $(CC_FLAGS) $< $(HASHMAP_SRC) -o $@
